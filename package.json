{
    "name": "@plt4rm/odm",
    "version": "1.9.1",
    "description": "PLT4RM's ODM (Object Document Mapper) is built for NodeJS and provides transparent persistence for JavaScript objects to MongoDB database",
    "main": "./index.js",
    "scripts": {
        "prepare": "npm run build",
        "build": "gulp | tsc",
        "test": "nyc mocha test/init.test.ts test/unit/**/*test.ts test/end.test.ts",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "release": "npm publish"
    },
    "files": [
        "lib",
        "index.js",
        "index.ts"
    ],
    "keywords": [
        "plt4rm",
        "plt4rm odm",
        "mongodb wrapper",
        "object document mapper"
    ],
    "nyc": {
        "check-coverage": false,
        "all": true,
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "**/**.interface.ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "docs/reports/coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/plt4rm/odm.git"
    },
    "author": "Shivaji Varma <contact@shivajivarma.com>",
    "contributors": [],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/plt4rm/odm/issues"
    },
    "homepage": "https://plt4rm.com",
    "dependencies": {
        "mongodb": "^3.5.4",
        "@types/mongodb": "^3.5.2",
        "@plt4rm/utils": "^0.7.3"
    },
    "devDependencies": {
        "@types/chai": "^4.2.7",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "coveralls": "^3.0.6",
        "del": "^5.1.0",
        "gulp": "^4.0.2",
        "mocha": "^6.2.2",
        "nyc": "^14.1.1",
        "typescript": "^3.6.2",
        "ts-node": "^8.5.4"
    }
}
