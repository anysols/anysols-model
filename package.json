{
    "name": "anysols-odm",
    "version": "1.1.0",
    "description": "Anysols ODM (Object Document Mapper) is built for NodeJS and provides transparent persistence for JavaScript objects to MongoDB database",
    "main": "./index.js",
    "scripts": {
        "prepare": "npm run build",
        "build": "gulp | tsc",
        "test": "nyc mocha --recursive test/init.test.js test/unit/**/*test.js test/end.test.js",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "release": "npm publish"
    },
    "files": [
        "lib",
        "index.js",
        "index.ts"
    ],
    "keywords": [
        "anysols",
        "mongoose wrapper",
        "anysols-model"
    ],
    "nyc": {
        "check-coverage": false,
        "all": true,
        "extension": [
            ".js"
        ],
        "include": [
            "lib/"
        ],
        "exclude": [],
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "docs/reports/coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anysols/anysols-odm.git"
    },
    "author": "Shivaji Varma <contact@shivajivarma.com>",
    "contributors": [],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/anysols/anysols-odm/issues"
    },
    "homepage": "https://anysols.com",
    "dependencies": {
        "@types/mongodb": "^3.2.3",
        "ajv": "^6.10.2",
        "mongodb": "^3.3.0"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "coveralls": "^3.0.5",
        "del": "^5.0.0",
        "gulp": "^4.0.2",
        "mocha": "^5.1.0",
        "nyc": "^11.6.0",
        "typescript": "^3.5.3"
    }
}
